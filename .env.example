# COVID-19 Economic Impact Analysis - Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_NAME=covid_economic.db
DB_TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=False

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=True

# Data Sources
COVID_API_URL=https://disease.sh/v3/covid-19
ECONOMIC_API_URL=
DATA_UPDATE_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000

# CORS Configuration
CORS_ORIGINS=*

# Data Processing
ROLLING_WINDOW=7
MIN_DATA_POINTS=10
OUTLIER_THRESHOLD=3.0

# Export Configuration
EXPORT_MAX_RECORDS=10000

# Visualization
VIZ_THEME=plotly_dark
CHART_HEIGHT=400
CHART_WIDTH=800

# Security
API_KEY_REQUIRED=False
API_KEY_HEADER=X-API-Key
ALLOWED_IPS=

# Feature Flags
FEATURE_CACHING=True
FEATURE_RATE_LIMIT=False
FEATURE_ANALYTICS=False
FEATURE_EXPORT=True
FEATURE_NOTIFICATIONS=False
